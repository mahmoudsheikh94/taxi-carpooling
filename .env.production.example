# üîê Production Environment Variables Template
# Copy this file to .env.production and fill in your actual production values
# Deploy these variables to your hosting platform (Vercel, Netlify, etc.)

# ================================
# üöÄ PRODUCTION APPLICATION CONFIGURATION
# ================================

# Production Application URL
VITE_APP_URL=https://taxi-carpooling.vercel.app
VITE_APP_NAME="Taxi Carpooling"
VITE_APP_DESCRIPTION="Modern taxi carpooling web application"

# Production Build Configuration
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_TIME=2024-01-01T00:00:00.000Z

# Environment
NODE_ENV=production

# ================================
# üóÑÔ∏è SUPABASE PRODUCTION CONFIGURATION
# ================================

# Production Supabase Project Settings
# Get these from your production Supabase project: https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-production-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-supabase-anon-key

# ================================
# üó∫Ô∏è GOOGLE MAPS PRODUCTION CONFIGURATION
# ================================

# Production Google Maps API Key
# Make sure to configure proper API restrictions for production
VITE_GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key

# Google Maps Configuration
VITE_GOOGLE_MAPS_REGION=US
VITE_GOOGLE_MAPS_LANGUAGE=en

# ================================
# üìä PRODUCTION MONITORING & ANALYTICS
# ================================

# Sentry Error Tracking (REQUIRED for production)
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-production-sentry-auth-token

# Google Analytics (REQUIRED for production)
VITE_GA_MEASUREMENT_ID=G-YOUR-PRODUCTION-GA-ID

# ================================
# üîí PRODUCTION SECURITY CONFIGURATION
# ================================

# CORS Origins (production domains only)
CORS_ORIGINS=https://taxi-carpooling.vercel.app,https://www.your-custom-domain.com

# ================================
# üéõÔ∏è PRODUCTION FEATURE FLAGS
# ================================

# Enable production features
VITE_ENABLE_SENTRY=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# Disable development features
VITE_ENABLE_DEBUG_TOOLS=false
VITE_ENABLE_MOCK_DATA=false

# ================================
# üìä PRODUCTION PERFORMANCE MONITORING
# ================================

# Performance monitoring thresholds (stricter for production)
VITE_PERFORMANCE_BUDGET_JS=400
VITE_PERFORMANCE_BUDGET_CSS=80

# ================================
# üì± PRODUCTION PWA CONFIGURATION
# ================================

# PWA Settings for production
VITE_PWA_OFFLINE_STRATEGY=cache-first
VITE_PWA_CACHE_NAME=taxi-carpooling-prod-v1

# ================================
# üîß PRODUCTION API CONFIGURATION
# ================================

# API Configuration (optimized for production)
VITE_API_TIMEOUT=5000
VITE_API_RETRY_ATTEMPTS=2

# ================================
# üåç PRODUCTION INTERNATIONALIZATION
# ================================

# Production locale settings
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr

# ================================
# üìß PRODUCTION EMAIL CONFIGURATION (if using custom email service)
# ================================

# Production email service configuration
EMAIL_SERVICE_API_KEY=your-production-email-api-key
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME="Taxi Carpooling"

